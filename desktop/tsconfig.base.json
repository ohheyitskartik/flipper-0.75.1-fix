{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es7", "dom", "es2019"],
    "esModuleInterop": true,
    "target": "ES2019",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "allowJs": true,
    "rootDir": ".",
    "paths": {
      "flipper": ["./app/src"],
      "flipper-plugin": ["./flipper-plugin/src"],
      "eslint-plugin-flipper": ["./eslint-plugin-flipper/src"],
      "flipper-*": ["./*/src"],
      "@js-shared/*": ["../../js-shared/*"],
      "*": ["./*", "./types/*"]
    }
  }
}
